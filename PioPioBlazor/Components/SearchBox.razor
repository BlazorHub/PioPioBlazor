@inject IJSRuntime JsRuntime

<input class="@Style.SearchBoxClass" type="search" placeholder="@Placeholder" @oninput="args => ChangeSearchTerm(args.Value.ToString())" />

@code {

    [Parameter]
    public string Placeholder { get; set; }

    [Parameter]
    public string SearchTerm { get; set; }

    [Parameter]
    public EventCallback<string> SearchTermChanged { get; set; }

    [Parameter]
    public SearchBoxStyle Style { get; set; } = SearchBoxStyle.TailwindCss;

    private void ChangeSearchTerm(string newSearchTerm)
    {
        SearchTermChanged.InvokeAsync(newSearchTerm);
    }

}